<% form_for(@receivable) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :seq %><br />
    <%= f.text_field_hl :seq %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label Customer.human_name %><br />
    <%= f.collection_select(:customer_id, Customer.all(:order=>"name"), :id, :name)%>
  </p>     
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field_hl :amount %>
  </p>
  <p>
    <%= f.submit_once t(button_label) %>
  </p>
<% end %>
