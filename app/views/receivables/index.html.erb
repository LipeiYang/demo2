<% title 'Listing receivables' %>

<%= render_new_link 'New receivable', new_receivable_path %>

<%= render_filter "receivable_filters/form" %>

<table>
  <tr>
    <th><%= Receivable.human_attribute_name :seq %></th>
    <th><%= Receivable.human_attribute_name :date %></th>
    <th><%= Customer.human_name %></th>
    <th><%= Receivable.human_attribute_name :amount %></th>
  </tr>

<% @receivables.each do |receivable| %>
  <tr jurl="<%= receivable_path(receivable) -%>">
    <td><%=h receivable.seq %></td>
    <td><%=h receivable.date %></td>
    <td><%=h receivable.customer.name %></td>
    <td class="right"><%=f receivable.amount %></td>
    <%= render_edit_link edit_receivable_path(receivable) %>
    <%= render_delete_link receivable %>
  </tr>
<% end %>
</table>

<br />

<table>
  <tr>
    <th><%= Customer.human_name %></th>
    <th><%= Receivable.human_attribute_name :amount %></th>
  </tr>
  <% customer_unrec_list.each do |o| %>
    <tr>
      <td><%=h o[0] %></td>
      <td class="right"><%=f o[1] %></td>
    </tr>
  <% end %>
</table>

<h3><%= t('Total Amount') %>: <%=f total_unrec %> </h3>

