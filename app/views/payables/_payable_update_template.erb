<% form_for(@payable) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :seq_no %><br />
    <%= f.text_field :seq_no %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label Supplier.human_name %><br />
    <%= f.collection_select(:supplier_id, Supplier.all(:order=>"name"), :id, :name)%>
  </p>     
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit t(button_label) %>
  </p>
<% end %>
