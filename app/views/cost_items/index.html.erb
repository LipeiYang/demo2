<% title 'Listing cost_items' %> 

<%= render_new_link 'New cost_item', new_cost_item_path %>

<table>
  <tr>
    <th><%= CostItem.human_attribute_name(:seq_no) %></th>
    <th><%= CostItem.human_attribute_name(:name) %></th>
    <th><%= CostItem.human_attribute_name(:period) %></th>
    <th><%= CostItem.human_attribute_name(:price) %></th>
  </tr>

<% @cost_items.each do |cost_item| %>
  <tr>
    <td><%=h cost_item.seq_no %></td>
    <td><%=h cost_item.name %></td>
    <td><%=h day_to_period[cost_item.period] %></td>
    <td class="right"><%=f cost_item.price %></td>
    <%= render_edit_link edit_cost_item_path(cost_item) %>
    <% if cost_item.invests.empty? %>
      <%= render_delete_link cost_item %>
    <% end %>
  </tr>
<% end %>
</table>

