<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </p>
  <p>
    <%= f.label :cell_phone %><br />
    <%= f.text_field :cell_phone %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :id_no %><br />
    <%= f.text_field :id_no %>
  </p>
  <p>
    <%= f.label :business_no %><br />
    <%= f.text_field :business_no %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :addtional %><br />
    <%= f.text_area :addtional %>
  </p>
  <p>
    <% Role.all.each do |role| %>
      <%= f.label role.name %>
      <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %><br />
    <% end%>
  </p>  
  <p>
    <%= f.submit t(button_label) %>
  </p>
<% end %>
