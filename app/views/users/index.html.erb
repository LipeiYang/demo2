<h1>Listing users</h1>

<table>
  <tr>
    <th>User Name</th>
    <th>Name</th>
    <th class="wid">Login Count</th>
    <th class="wid">Last Request At</th>
    <th class="wid">Last Login At</th>
    <th class="wid">Current Login At</th>
    <th>Share</th>
    <th>Role</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
      <% if user.share_to_admin? %>
        <%= link_to user.username, orders_path(:user=>user.username) %>
      <% else %>
        <%=h user.username %>
      <% end%>
    </td>
    <td><%=h user.name %></td>
    <td><%=h user.login_count %></td>
    <td><%=ft user.last_request_at || Time.now %></td>
    <td><%=ft user.last_login_at || Time.now %></td>
    <td><%=ft user.current_login_at || Time.now %></td>
    <td><%=h user.share %></td>
    <td><%=h user.roles.to_sentence :two_words_connector =>', ' %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

