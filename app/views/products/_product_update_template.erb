<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= Product.human_attribute_name(:weighted_cost) %>:
    <%=f @product.weighted_cost %>
  </p>
  <p>
    <%= f.submit_once t(button_label) %>
  </p>
<% end %>
