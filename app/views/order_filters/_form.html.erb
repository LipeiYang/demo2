<% form_for(@order_filter) do |f| %>
  <%= f.error_messages %>

    <%= render :partial => "partials/form/filter/date_range", :locals =>{ :f => f } %>
    <%= render :partial => "partials/form/filter/customer", :locals =>{ :f => f } %>
    <%= render :partial => "partials/form/filter/product", :locals =>{ :f => f } %>
    <%= render :partial => "partials/form/filter/paied", :locals =>{ :f => f, :criteria => @order_filter } %>
    <%= render :partial => "partials/form/filter/submit", :locals =>{ :f => f } %>
    <%= label_tag t('Use Estimate Cost') %>
    <%= check_box_tag('by_esti_cost', YES, YES.eql?(cookies[:by_esti_cost]), {:onchange =>"this.form.submit()"}) %>

<% end %>
