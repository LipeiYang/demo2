<% title t('Listing customers') %>

<h3><%= link_to t('New customer'), new_customer_path %></h3>

<table>
  <tr>
    <th><%= Customer.human_attribute_name(:seq_no) %></th>
    <th><%= Customer.human_attribute_name(:name) %></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%=h customer.seq_no %></td>
    <td><%=h customer.name %></td>
    <td><%= link_to t('Edit'), edit_customer_path(customer) %></td>
    <% if customer.orders.empty? %>
      <td><%= link_to t('Destroy'), customer, :confirm => t('Are you sure?'), :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<h3>总共 <%=h @customers.size %> 个</h3>

