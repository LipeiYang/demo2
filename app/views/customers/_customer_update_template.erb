<% form_for(@customer) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "partials/form/update/seq", :locals =>{ :f => f } %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cutoff_date %><br />
    <%= f.date_select :cutoff_date %>
  </p>
  <p>
    <%= f.label :inreceive_amount %><br />
    <%= f.text_field_hl :inreceive_amount %>
  </p>
  <%= render :partial => "partials/form/update/telph", :locals =>{ :f => f } %>
  <%= render :partial => "partials/form/update/mobph", :locals =>{ :f => f } %>
  <p>
    <%= f.submit_once t(button_label) %>
  </p>
<% end %>
